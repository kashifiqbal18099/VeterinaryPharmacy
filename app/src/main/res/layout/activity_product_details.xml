<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="details"
            type="com.kashif.veterinarypharmacy.home.model.ProductModel" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/extra_ligh_grey"
        android:layout_height="match_parent"
        tools:context=".home.activity.ProductDetailsActivity">

        <include
            layout="@layout/toolbar"
            android:id="@+id/top"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_rel"
            android:layout_below="@+id/top"
            android:background="@color/white"
            >


        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_centerHorizontal="true"
            android:id="@+id/view_pager"
            android:layout_margin="@dimen/_30sdp"
            android:background="@color/white"
            />
        <ImageView
            customtint="@{details.is_fav}"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:id="@+id/fav_btn"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_heart"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:textSize="@dimen/extra_extra_big_text_size"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_below="@+id/view_pager"
            android:text="@{details.name}"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/price_linear"

            android:layout_below="@+id/product_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignLeft="@+id/product_name"
            >
            <com.kashif.veterinarypharmacy.customviews.TextViewSeogoeuiRegularStrike
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/light_grey"
                android:text="@{details.promo_price + ` PKR`}"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{details.original_price + ` PKR`}"
                android:textSize="@dimen/normal_text_size"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_5sdp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orginal_price"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/text_pink"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/price_linear"
            android:layout_alignLeft="@+id/price_linear"
            android:layout_toRightOf="@+id/image"
            android:textSize="@dimen/big_text_size"
            android:text="@{details.precent_off + ` % OFF`}"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/price_linear"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/light_grey"
                android:text="@string/select_qty"
                android:textSize="@dimen/meduim_text_size"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/add_qty"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/extra_big_text_size"
                    />

                <TextView
                    android:layout_width="23dp"
                    android:layout_height="33dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/qty_layout"
                    android:gravity="center"
                    android:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/remove_qty"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/extra_big_text_size"
                    />

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/delivery_rel"
            android:layout_below="@+id/top_rel"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:id="@+id/check_deliver_txt"
                android:text="@string/check_delivery"
                android:textStyle="bold"
                android:textSize="@dimen/meduim_text_size"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/check_deliver_txt"
                android:background="@color/light_grey"
                />

            <Button
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:text="@string/check"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:background="@drawable/rounded_yellow_btn"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/product_reviws"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/delivery_rel"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:id="@+id/product_reviews_txt"
                android:text="@string/product_review"
                android:textStyle="bold"
                android:textSize="@dimen/meduim_text_size"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/product_reviews_txt"
                android:background="@color/light_grey"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_back"
                android:rotation="180"
                android:layout_marginRight="@dimen/_10sdp"
                app:tint="@color/button_blue"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/product_reviws"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:id="@+id/product_details_txt"
                android:text="@string/product_details"
                android:textStyle="bold"
                android:textSize="@dimen/meduim_text_size"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/product_details_txt"
                android:background="@color/light_grey"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_back"
                android:rotation="180"
                android:layout_marginRight="@dimen/_10sdp"
                app:tint="@color/button_blue"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

    </RelativeLayout>
</layout>
